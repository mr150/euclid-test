header.header
	.wrapper.header__inner
		nav
			button.header__btn-nav.btn.btn--burger.btn--def-focus: span.sr-only Меню
			ul.nav-menu.nav-menu--js
				each item in nav
					li.nav-menu__item: a.nav-menu__link(href='#')= item
		a.header__logo
			picture
				source(srcset='img/logo.webp, img/logo@2x.webp 2x', type='image/webp')
				img(src='img/logo.png' srcset='img/logo.png, img/logo@2x.png 2x' alt='Евклид')
		form.search-form(action='#')
			.search-form__field(hidden)
				input(type='search' required)
			button.btn.btn--search.btn--def-focus
				+svgIcon(24, 24, 'search')
				span.sr-only Открыть поиск
